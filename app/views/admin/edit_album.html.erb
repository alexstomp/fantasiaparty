<h1 class="page-header"><strong>MODIFIER ALBUM</strong>
<% if @album.is_archived? %>
    <a href="<%= publish_album_path(:id => @album.id) %>" class="button accent">PUBLIER</a>
<% else %>
    <a href="<%= archive_album_path(:id => @album.id) %>" class="button accent">ARCHIVE</a>
<% end %>
</h1>

<%= form_for :album, :url => update_album_path do |f| %>

    <div class="form-item">
        <label for=":date">Date</label>
        <%= f.date_field :date %>
    </div>

    <div class="form-item">
        <label for=":age">Age</label>
        <%= f.number_field :age %>
    </div>

    <div class="form-item">
        <label for=":nom">Nom</label>
        <%= f.text_field :nom %>
    </div>

    <div class="form-item">
        <label for=":description">Description</label>
        <%= f.text_area :description %>
    </div>

    <div class="form-item">
        <%= f.submit "SAUVEGARDER", :class => "accent" %>
    </div>

    <div class="form-side">
        <h4>Images</h4>
    </div>

<% end %>